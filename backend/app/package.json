{
  "name": "app",
  "version": "1.0.0",
  "description": "Ufinance app",
  "main": "server.js",
  "scripts": {
    "lint": "standard",
    "test": "jest"
  },
  "author": "Gary Crye",
  "license": "ISC",
  "dependencies": {
    "fastify": "^3.15.1",
    "fastify-autoload": "^3.7.1",
    "fastify-plugin": "^3.0.0",
    "fastify-postgres": "^3.5.0",
    "fastify-swagger": "^4.7.0",
    "is-docker": "^2.2.1",
    "pg": "^8.6.0",
    "pino-pretty": "^4.8.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "standard": "^16.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.js"
    ],
    "verbose": true
  },
  "standard": {
    "env": {
      "jest": true,
      "node": true
    }
  }
}
